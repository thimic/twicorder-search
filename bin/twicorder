#!/usr/bin/env python3
# -*- coding: utf-8 -*-

import click
import sys
import traceback
import faulthandler


def main():
    """
    Twicorder Search
    """
    faulthandler.enable()
    from twicorder.controller import Twicorder

    twicorder = Twicorder()
    try:
        twicorder.run()
    except Exception:
        click.echo(traceback.format_exc())
        sys.exit(1)


if __name__ == '__main__':
    main()
